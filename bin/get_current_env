#!/bin/sh

set -eu

ENV=dev

if [ -f "$HOME"/bin/deployment-get-environment ]; then
  GITHUB_ENV=$("$HOME"/bin/deployment-get-environment)

  # Get deployment environment
  if [ "$GITHUB_ENV" = staging ]; then
    ENV=stag
  elif [ "$GITHUB_ENV" = production ]; then
    ENV=prod
  elif [ "$GITHUB_ENV" = testing ]; then
    ENV=test
  fi
fi

echo "$ENV"