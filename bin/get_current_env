#!/bin/sh

set -eu

GITHUB_ENV=${HOME}/bin/deployment-get-environment

echo "### deployment environment: $GITHUB_ENV ###"

if [ -z "$GITHUB_ENV" ]; then
  echo "Deployment environment not set, using default environment 'dev'"
fi

ENV=dev

# Get deployment environment
if [ "$GITHUB_ENV" = staging ]; then
  ENV=stag
elif [ "$GITHUB_ENV" = production ]; then
  ENV=prod
elif [ "$GITHUB_ENV" = testing ]; then
  ENV=test
fi

echo "$ENV"